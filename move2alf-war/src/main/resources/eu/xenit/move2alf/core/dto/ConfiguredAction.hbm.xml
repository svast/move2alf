<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="eu.xenit.move2alf.core.dto.ConfiguredAction" table="configuredAction">
		<id name="id">
			<generator class="identity" />
		</id>
		<property name="classId" column="classId"/>

    	
    	<map name="parameters" table="configuredActionParameter" cascade="all-delete-orphan" lazy="false">
    		<key column="configuredActionId"/>
    		<map-key column="name" type="string"/>
    		<element column="value" type="string"/>
    	</map>

        <set name="receivers" table="configuredAction_configuredAction" inverse="false" lazy="true" cascade="all-delete-orphan">
            <key>
                <column name="SENDER_ID" not-null="true" />
            </key>
            <many-to-many entity-name="eu.xenit.move2alf.core.dto.ConfiguredAction">
                <column name="RECEIVER_ID" not-null="true" />
            </many-to-many>
        </set>
    	
	</class>
</hibernate-mapping>