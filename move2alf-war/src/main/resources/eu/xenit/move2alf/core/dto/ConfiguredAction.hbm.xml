<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="eu.xenit.move2alf.core.dto.ConfiguredAction" table="configuredAction">
		<id name="id">
			<generator class="identity" />
		</id>
		<property name="classId" column="classId"/>

        <property name="configuredSourceSink" column="configuredSourceSink" />
    	
    	<map name="parameters" table="configuredActionParameter" cascade="all-delete-orphan" lazy="false">
    		<key column="configuredActionId"/>
    		<map-key column="name" type="string"/>
    		<element column="value" type="string"/>
    	</map>

        <map name="receivers" table="sender_receiver" inverse="false" lazy="true" cascade="all-delete-orphan">
            <key>
                <column name="senderId" not-null="true" />
            </key>
            <map-key column="name" type="string"/>
            <element column="receiverId"/>
        </map>
    	
	</class>
</hibernate-mapping>