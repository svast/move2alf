<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="eu.xenit.move2alf.core.dto.ConfiguredSourceSink" table="configuredSourceSink">
		<id name="id">
			<generator class="identity" />
		</id>
		<property name="classId" column="classId"/>
    	<map name="parameters" table="configuredSourceSinkParameter" lazy="false">
			<key column="configuredSourceSinkId" />
			<map-key column="name" type="string" />
			<element column="value" type="string" />
		</map>
    	<set name="configuredActionSet" table="configuredActionConfiguredSourceSink" inverse="true" >
      		<key column="configuredSourceSinkId"/>
      		<many-to-many class="eu.xenit.move2alf.core.dto.ConfiguredAction" column="configuredActionId"/>
    	</set>
    	
	</class>
</hibernate-mapping>