<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="eu.xenit.move2alf.core.dto.ConfiguredReport" table="configuredReport">
		<id name="id">
			<generator class="identity" />
		</id>
		<property name="className" column="reportClassName" />
		
		<map name="parameters" table="configuredReportParameter" lazy="false">
			<key column="configuredReportId" />
			<map-key column="name" type="string" />
			<element column="value" type="string" />
		</map>

		<set name="configuredSourceSinkSet" table="configuredReportConfiguredSourceSink">
			<key column="configuredReportId" />
			<many-to-many class="eu.xenit.move2alf.core.dto.ConfiguredSourceSink"
				column="configuredSourceSinkId" />
		</set>

	</class>
</hibernate-mapping>