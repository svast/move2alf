<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="eu.xenit.move2alf.core.dto.ConfiguredAction" table="configuredAction">
		<id name="id">
			<generator class="identity" />
		</id>
		<property name="className" column="actionClassName"/>
		<many-to-one name="appliedConfiguredActionOnSuccess" column="appliedConfiguredActionOnSuccessId" unique="true" lazy="false"/>
		<many-to-one name="appliedConfiguredActionOnFailure" column="appliedConfiguredActionOnFailureId" unique="true" lazy="false"/>
    	<set name="configuredObjectParameterSet" table="configuredActionParameter" lazy="false">
      		<key column="configuredActionId"/>
      		<composite-element class="eu.xenit.move2alf.core.dto.ConfiguredObjectParameter">
        		<property name="name"/>
        		<property name="value"/>
      		</composite-element>
    	</set>
    	<set name="configuredSourceSinkSet" table="configuredActionConfiguredSourceSink">
      		<key column="configuredActionId"/>
      		<many-to-many class="eu.xenit.move2alf.core.dto.ConfiguredSourceSink" column="configuredSourceSinkId"/>
    	</set>
    	
	</class>
</hibernate-mapping>