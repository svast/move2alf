<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="eu.xenit.move2alf.core.dto.ConfiguredSourceSink" table="configuredSourceSink">
		<id name="id">
			<generator class="identity" />
		</id>
		<property name="sourceSinkClassName"/>
    	<set name="configuredSourceSinkParameterSet" table="configuredSourceSinkParameter" lazy="false">
      		<key column="configuredSourceSinkId"/>
      		<composite-element class="eu.xenit.move2alf.core.dto.ConfiguredSourceSinkParameter">
        		<property name="name"/>
        		<property name="value"/>
      		</composite-element>
    	</set>
    	<set name="configuredActionSet" table="configuredActionConfiguredSourceSink" inverse="true">
      		<key column="configuredSourceSinkId"/>
      		<many-to-many class="eu.xenit.move2alf.core.dto.ConfiguredAction" column="configuredActionId"/>
    	</set>
    	<set name="configuredReportSet" table="configuredReportConfiguredSourceSink" inverse="true">
      		<key column="configuredSourceSinkId"/>
      		<many-to-many class="eu.xenit.move2alf.core.dto.ConfiguredReport" column="configuredReportId"/>
    	</set>
    	
	</class>
</hibernate-mapping>